<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_item"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="3dp"
            android:text="Main Heading of any news that is abcded and defabc is displayed here in this textview"
            android:textColor="#E2FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sub heading"
            android:layout_below="@id/title_heading"
            android:textColor="#818080"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:id="@+id/subHeading_text"/>

        <Button
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:id="@+id/share_news"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/title_heading"
            android:background="@drawable/ic_baseline_share_24"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>