<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/image_item"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_heading"
            android:layout_below="@id/image_item"
            android:textColor="#E2FFFFFF"
            android:text="Main Heading of any news that is abcded and defabc is displayed here in this textview"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sub heading"
            android:layout_below="@id/title_heading"
            android:textColor="#818080"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:id="@+id/subHeading_text"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>